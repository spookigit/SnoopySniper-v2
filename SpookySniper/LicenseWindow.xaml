<Window x:Class="SpookySniper.App.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpookySniper v2.0 - License Activation" 
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#0D1117"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Border CornerRadius="16" Background="#0D1117" BorderBrush="#30363D" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Background="#161B22" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="30,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="👻" FontSize="24" Margin="0,0,12,0"/>
                    <TextBlock Text="SpookySniper v2.0" FontSize="18" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="✕" Width="40" Height="40" Background="Transparent" 
                        Foreground="#6B7280" BorderThickness="0" Click="CloseButton_Click" 
                        Style="{StaticResource TitleBarButton}" Margin="0,0,15,0"/>
            </Grid>
            
            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="50,40,50,20" HorizontalAlignment="Center">
                <TextBlock Text="🔐 License Activation Required" FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="SpookySniper v2.0 is a premium tool that requires a valid license key." 
                          FontSize="14" Foreground="#9CA3AF" HorizontalAlignment="Center" 
                          TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,30"/>
                
                <Border Background="#161B22" CornerRadius="12" Padding="30" BorderBrush="#21262D" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Enter License Key" FontSize="16" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,15"/>
                        
                        <TextBox x:Name="LicenseKeyTextBox" Style="{StaticResource ModernTextBox}" 
                                Height="45" FontSize="14" Margin="0,0,0,20"
                                Text="SPOOKY-XXXX-XXXX-XXXX-XXXX"/>
                        
                        <TextBlock x:Name="ErrorMessage" Text="" Foreground="#EF4444" 
                                  FontSize="12" Margin="0,0,0,15" Visibility="Collapsed"/>
                        
                        <Button x:Name="ActivateButton" Content="🚀 Activate License" 
                               Style="{StaticResource ModernButton}" Height="45" 
                               FontSize="14" Click="ActivateButton_Click"/>
                        
                        <Rectangle Height="1" Fill="#30363D" Margin="0,25"/>
                        
                        <TextBlock Text="Don't have a license?" FontSize="12" Foreground="#6B7280" 
                                  HorizontalAlignment="Center" Margin="0,15,0,10"/>
                        
                        <Button Content="🛒 Purchase License on Whop" 
                               Style="{StaticResource SecondaryButton}" Height="40" 
                               FontSize="12" Click="PurchaseButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Footer -->
            <Grid Grid.Row="2" Background="#161B22" Height="50">
                <TextBlock Text="© 2024 SpookySniper Team - Licensed Users Only" 
                          FontSize="11" Foreground="#6B7280" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</Window>
