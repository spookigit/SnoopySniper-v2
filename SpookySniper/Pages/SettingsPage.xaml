<Page x:Class="SpookySniper.App.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <!-- Header -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Application Settings" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock Text="Configure SpookySniper preferences and behavior" FontSize="14" Foreground="#9CA3AF"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="ðŸ’¾ Save All Settings" Style="{StaticResource ModernButton}"/>
            </Grid>
            
            <!-- Chrome Settings -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸŒ Chrome Browser Settings" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Chrome Profile Path" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource ModernTextBox}" Height="40" Text="Auto-detected" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="WebDriver Port" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource ModernTextBox}" Height="40" Text="9515"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <CheckBox Content="Use existing Chrome session" Foreground="#E5E7EB" IsChecked="True" Margin="0,0,0,12"/>
                            <CheckBox Content="Enable stealth mode" Foreground="#E5E7EB" IsChecked="True" Margin="0,0,0,12"/>
                            <CheckBox Content="Auto-detect Chrome path" Foreground="#E5E7EB" IsChecked="True" Margin="0,0,0,12"/>
                            <CheckBox Content="Hide Chrome window" Foreground="#E5E7EB" Margin="0,0,0,12"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Bidding Settings -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="âš¡ Auto Bidding Settings" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Default Bid Interval (seconds)" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource ModernTextBox}" Height="40" Text="30" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Max Concurrent Tasks" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource ModernTextBox}" Height="40" Text="5" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="High Value Threshold (SOL)" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource ModernTextBox}" Height="40" Text="1.0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <CheckBox Content="Auto-retry failed bids" Foreground="#E5E7EB" IsChecked="True" Margin="0,0,0,12"/>
                            <CheckBox Content="Stop after successful bid" Foreground="#E5E7EB" Margin="0,0,0,12"/>
                            <CheckBox Content="Randomize bid intervals" Foreground="#E5E7EB" Margin="0,0,0,12"/>
                            <CheckBox Content="Enable price monitoring" Foreground="#E5E7EB" IsChecked="True" Margin="0,0,0,12"/>
                            
                            <TextBlock Text="Retry Attempts" Foreground="#E5E7EB" Margin="0,10,0,8"/>
                            <ComboBox Style="{StaticResource ModernComboBox}" SelectedIndex="1">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="5"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Notification Settings -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="ðŸ”” Discord Notifications" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <CheckBox Content="Notify on successful bids" Foreground="#E5E7EB" IsChecked="True" Margin="0,0,0,12"/>
                            <CheckBox Content="Notify on failed bids" Foreground="#E5E7EB" Margin="0,0,0,12"/>
                            <CheckBox Content="Notify on task start/stop" Foreground="#E5E7EB" IsChecked="True" Margin="0,0,0,12"/>
                            <CheckBox Content="Notify on high value bids" Foreground="#E5E7EB" IsChecked="True" Margin="0,0,0,12"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="Discord Webhook URL" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource ModernTextBox}" Height="40" Text="https://discord.com/api/webhooks/..." Margin="0,0,0,15"/>
                            
                            <Button Content="ðŸ§ª Test Webhook" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
