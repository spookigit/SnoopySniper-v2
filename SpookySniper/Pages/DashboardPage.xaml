<Page x:Class="SpookySniper.App.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="👻" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="SpookySniper Dashboard" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Premium Magic Eden Auto Bidder" FontSize="16" Foreground="#8B5CF6" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            
            <Border Style="{StaticResource Card}" MaxWidth="600">
                <StackPanel>
                    <TextBlock Text="🎯 System Status" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Chrome Status" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            <TextBlock Text="✅ Connected" Foreground="#10B981" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Active Tasks" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            <TextBlock Text="0 Running" Foreground="#8B5CF6" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                            <TextBlock Text="License Status" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            <TextBlock Text="✅ Licensed" Foreground="#10B981" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Discord Webhook" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            <TextBlock Text="⚠️ Not Configured" Foreground="#F59E0B" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
